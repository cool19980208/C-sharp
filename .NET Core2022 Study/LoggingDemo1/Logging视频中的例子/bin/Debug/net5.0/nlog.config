<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		
		<target xsi:type="File" name="defaultFile" fileName="logs/log-${shortdate}.log"
				layout="${date}||${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

		<!-- archiveAboveSize:限制单个文本的大小 ； maxArchiveFiles：限制文件个数 -->
		<target xsi:type="File" name="systServicesFile" archiveAboveSize="10000" maxArchiveFiles="3"
				fileName="logs/systServices-${shortdate}.log"
				layout="${date}||${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

		<target xsi:type="ColoredConsole" name="targetConsole" 
				layout="${date}||${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />
	</targets>

	<rules>
		<!--最低级别：Warn ；最高级别：Fatal -->
		<logger name="*" minlevel="Warn" maxlevel="Fatal" writeTo="targetConsole" />
		<!--命名空间名称开头：SystemServices -->
		<logger name="SystemServices.*" minlevel="Trace" writeTo="systServicesFile" final="true" />
		<!--上面都不符合就用这个-->
		<logger name="*" minlevel="Trace" writeTo="defaultFile" />
	</rules>

</nlog>